<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aesc.santos.gitanoapp.Fragments.CreditosFragment">

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:elevation="10dp"
            android:id="@+id/relLayout1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:background="@drawable/degratitions_creditos_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/crPhoto"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/ctilogo" />


                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtNombreAbtUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crPhoto"
                    android:layout_centerHorizontal="true"
                    android:text="Desarrallador de Aplicaciones Mobiles"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtPuesto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNombreAbtUs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Desarrollado por:"
                    android:textSize="14sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

   <android.support.v7.widget.RecyclerView
       android:layout_below="@+id/relLayout1"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rvabout"
       android:scrollbars="vertical"/>

</RelativeLayout>
